<!--
 |  Samsung Smart-TV protocol configuration for OpenRemote Designer.
 |
 |  Author: Marcus Redeker
 +-->
<openremote xmlns="http://www.openremote.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.openremote.org protocol.xsd">
    
    <protocol displayName="Samsung TV Remote" tagName="samsungTV">
        
        <attr name="keyCode" label="KeyCode" tooltipMessage="The KeyCode which is sent to the TV, BD-Player, ...">
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>
        
        <attr name="ipAddress" label="IP-Address" tooltipMessage="Can be used to control multiple devices">
            <validations>
                <allowBlank>true</allowBlank>
            </validations>
        </attr>
        
    </protocol>
</openremote>
