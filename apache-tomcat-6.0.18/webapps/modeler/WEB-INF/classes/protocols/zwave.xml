<!--
 |  Z-Wave protocol configuration for OpenRemote Designer.
 |
 |  Author: Marcus Redeker
 +-->
<openremote xmlns="http://www.openremote.org"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://www.openremote.org protocol.xsd">

    <protocol displayName="Z-Wave" tagName="zwave">

        <attr name="nodeId" label="Z-Wave nodeID" tooltipMessage="The nodeID the controller assigned to this device upon inclusion">
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>


        <attr name="command" label="Command" tooltipMessage="Currently 'on', 'off', 'dim' and 'status' for switches and dimmer work">
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>
        
    </protocol>
</openremote>
