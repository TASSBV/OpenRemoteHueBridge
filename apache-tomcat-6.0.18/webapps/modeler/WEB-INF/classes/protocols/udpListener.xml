<!--
 |  UDPListener protocol configuration for OpenRemote Designer.
 |
 |  Author: Marcus Redeker
 +-->
<openremote xmlns="http://www.openremote.org"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://www.openremote.org protocol.xsd">

    <protocol displayName="UDPListener" tagName="udpListener">

        <attr name="port" label="UDP port" tooltipMessage="The UDP port where the controller will listen for packages">
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>

        <attr name="regex" label="RegularExpression" tooltipMessage="Regex to find a match in the received UDP packet" >
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>
        
    </protocol>
</openremote>
